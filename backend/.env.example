# .env.example

# -----------------------------------
# Database Configuration
# -----------------------------------
# Lokalt: SQLite
DATABASE_URL=sqlite:///calorie_tracker.db
# Produktion (Render): Postgres connection string
# DATABASE_URL=postgresql://<USER>:<PASSWORD>@<HOST>:5432/<DBNAME>

# -----------------------------------
# Flask Configuration
# -----------------------------------
FLASK_ENV=development     # production på Render
FLASK_DEBUG=True          # False på Render
FLASK_APP=app.py

# -----------------------------------
# Server Configuration
# -----------------------------------
PORT=5000
HOST=127.0.0.1

# -----------------------------------
# CORS Configuration
# -----------------------------------
# Lokalt: tillad localhost
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# Produktion (Render): fx dit hostede frontend
# CORS_ORIGINS=https://calcalcfront.onrender.com

# -----------------------------------
# Security
# -----------------------------------
# Sæt en stærk nøgle på Render (via Dashboard env var)
SECRET_KEY=your-secret-key-here

# -----------------------------------
# Logging
# -----------------------------------
LOG_LEVEL=DEBUG  # Lokalt
# LOG_LEVEL=INFO  # Produktion
